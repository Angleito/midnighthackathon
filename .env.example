# Midnight Wallet Configuration
# Wallet mode: 'extension' (browser extension only), 'programmatic' (SDK only), or 'auto' (prefer extension, fallback to programmatic)
VITE_WALLET_MODE=auto

# Network Configuration
VITE_INDEXER_URI=https://indexer.testnet.midnight.network/api/v1/graphql
VITE_INDEXER_WS_URI=wss://indexer.testnet.midnight.network/api/v1/graphql
VITE_SUBSTRATE_NODE_URI=https://rpc.testnet.midnight.network

# Prover Server Configuration
# Set to your local prover server URL, or use the dummy URL for development
VITE_PROVER_SERVER_URI=http://localhost:6300
# Set to 'true' to disable prover server (development mode)
VITE_DISABLE_PROVER=true

# WebSocket Configuration
# Set to 'true' to disable WebSocket connections (development mode)
VITE_DISABLE_WEBSOCKET=false

# Development Configuration
# Set to 'true' for development logging
VITE_DEBUG_WALLET=false