// This file defines the data types used in the combat contract, specifying the structure of player and monster stats.

type PlayerStats = {
    health: number;
    attackPower: number;
    defense: number;
    speed: number;
};

type MonsterStats = {
    name: string;
    health: number;
    attackPower: number;
    defense: number;
    speed: number;
};

type CombatActions = 'attack' | 'defend' | 'flee' | 'magicAttack';